<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/amarillo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Contenedor de la información del bocadillo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNombreAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre: Bocadillo X"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/textViewTipoAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo: frío"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/textViewPrecioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio: 2.50€"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/textViewDiaAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Día: Lunes"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Contenedor de los botones de acción -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnEditBocadilloAdmin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_boton_editar"
                android:contentDescription="@string/edit" />

            <ImageView
                android:id="@+id/btnDeleteBocadilloAdmin"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_borrar"
                android:contentDescription="@string/delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
